<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6aa5a513"
    tools:context="com.junit.himquickguide.Main0Activity">
    <RelativeLayout
        android:layout_marginBottom="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/close"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/ic_close"
            android:onClick="close"
            android:visibility="visible"
            />

            />


    </RelativeLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#6aa5a513"
    tools:context="com.junit.himquickguide.Main0Activity">
<LinearLayout
    android:id="@+id/menus"
    android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<Button
    android:onClick="definitions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@mipmap/definitions"/>
    <Button
        android:onClick="types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@mipmap/types"/>
    <Button
        android:onClick="examples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@mipmap/examples"/>

    </LinearLayout>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="35dp">

    <ImageView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:id="@+id/open"
        android:onClick="open"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/ic_open"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Mercury"
        android:textColor="#eea5a513"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#0e0e0e"/>

<TextView
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Definitions"
    android:textStyle="normal"
    android:textSize="15sp"
    android:id="@+id/textview"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#0e0e0e"/>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/definitions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="normal"
        android:text="Mercury is an solar system amongs the world planets"
        android:layout_margin="6dp"
        android:textColor="#0e0e0e"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="normal"
            android:text="Mercury is a solar system amongs the world planets"
            android:layout_margin="6dp"
            android:textColor="#0e0e0e"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="normal"
        android:text="oil"
        android:layout_margin="6dp"
        android:textColor="#0e0e0e"/>
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="normal"
        android:text="gas"
        android:layout_margin="6dp"
        android:textColor="#0e0e0e"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/examples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="normal"
        android:text="water"
        android:layout_margin="6dp"
        android:textColor="#0e0e0e"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="normal"
            android:text="stone"
            android:layout_margin="6dp"
            android:textColor="#0e0e0e"/>

    </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>
    </RelativeLayout>