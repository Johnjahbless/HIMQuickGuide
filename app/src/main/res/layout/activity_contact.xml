<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            tools:context="com.junit.himquickguide.ContactActivity">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write your message" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/sendEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Send feedback"/>
            <LinearLayout
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fitness_health"
                    />
                <TextView
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/version_5_0"
                    />
                <TextView
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developed by:"/>
                <TextView
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Junit Apps"/>




                <TextView
                    android:paddingBottom="90dp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copyright Â© 2018 JunitApps. All Rights Reserved"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>